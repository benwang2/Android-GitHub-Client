<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <ImageView
        android:layout_marginTop="64dp"
        android:layout_width="128dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/github_mark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/github_mark"
        />
    <ImageView
        android:layout_width="128dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:src="@drawable/github_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/github_mark"
        android:id="@+id/github_logo"
        />
    
    <EditText
        android:layout_width="192dp"
        android:layout_height="0dp"
        android:background="#202e3c"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/github_logo"

        android:textColorHint="#FEFEFE"
        android:textColor="#FFFFFF"
        android:textAlignment="center"

        android:id="@+id/github_username_entry"

        android:inputType="text"
        android:hint="@string/placeholder_input"
        />
    
    <Button
        android:layout_width="128dp"
        android:layout_height="0dp"
        android:text="Check"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/github_username_entry"
        />

</androidx.constraintlayout.widget.ConstraintLayout>